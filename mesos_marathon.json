{
  "id": "/mining/cpuminer-opt",
  "cmd": "/root/start.sh --no-color -a yescrypt -o stratum+tcp://stratum.eu.miners-pool.eu:8428 -u <your_myriadcoin_address> -t 4 --api-bind 0.0.0.0:$PORT0",
  "cpus": 4,
  "gpus": 0,
  "mem": 512,
  "disk": 1000,
  "instances": 5,
  "container": {
    "type": "MESOS",
    "docker": {
      "image": "earthlablux/cpuminer-opt:latest",
      "forcePullImage": true
    }
  },
  "constraints": [
    [
      "hostname",
      "MAX_PER",
      "3"
    ]
  ]
}
